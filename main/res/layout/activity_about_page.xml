<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="app.pgupta.keepcount.activity.AboutPageActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="143dp"
            android:layout_height="101dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Count"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="25dp"
            android:text="Keep a note and an account of activities you do or events that happens to you"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Keep Count is the easiest way to keep a Note and Account of Events and Activities
that matters to you. The app is single screen, and easy and intuitive to use. Save custom events, mark
them with just a tap and get a count at the end of the month. The data is private and local to your device only.\n
\nThe app comes preloaded with events to give you a head start.\n
\nFeatures Include:\n
\n* Create and save an Event or Activity.
\n* Mark a saved Event or Activity  every time it happens.
\n* Set reminder for an Event or Activity.
\n* Have a look at Quick History of every Event.
\n* Delete an Event any time.
\n* Check what has been marked so far in the ongoing month.
\n* Get a month wise count and ledger for every Event or Activity marked.
\n* Personalize the app by selecting a theme from settings.
\n* Take backup of the data and restore that backup whenever you want."
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="Developer Email - apps.pgupta@gmail.com"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="8sp"
            android:text="Disclaimer: The user of this app is solely responsible for his/her data and the device on which it was installed."
            android:id="@+id/textView7" />
</LinearLayout>
</ScrollView>
